{
    "files.autoSave": "afterDelay",
    "C_Cpp.intelliSenseEngine": "disabled",
    "workbench.colorTheme": "GitHub Dark High Contrast",
    "editor.fontFamily": "'Fira Code', 'Courier New', monospace",

    // Let VSCode handle these
    "vim.handleKeys": {
        "<C-a>": false,
        "<C-x>": false,
        "<C-c>": false,
        "<C-v>": false,
        "<C-f>": false,
        "<C-p>": false,
        "<C-s>": false,
        "<C-z>": false,
        "<C-y>": false
     },

    // Vim settings
    "vim.leader": "<space>",
    // "vim.useSystemClipboard": true,          
    "vim.hlsearch": true,
    "vim.incsearch": true,
    "vim.smartRelativeLine": true,

    "vim.easymotion": true,
    // Normal mode
    "vim.normalModeKeyBindingsNonRecursive": [
        // $^ Swap
        { "before": ["$"], "after": ["^"] },
        { "before": ["^"], "after": ["$"] },

        // Switch tabs
        { "before": ["<leader>", "h"], "commands": ["workbench.action.previousEditor"] },
        { "before": ["<leader>", "l"], "commands": ["workbench.action.nextEditor"] },

        // Move windows
        { "before": ["<leader>", "H"], "commands": ["workbench.action.focusLeftGroup"] },
        { "before": ["<leader>", "L"], "commands": ["workbench.action.focusRightGroup"] },
        { "before": ["<leader>", "j"], "commands": ["workbench.action.focusNextGroup"] },
        { "before": ["<leader>", "k"], "commands": ["workbench.action.focusPreviousGroup"] },

        // Window splits
        { "before": ["<leader>", "S"], "commands": ["workbench.action.splitEditorRight"] },
        { "before": ["<leader>", "s"], "commands": ["workbench.action.splitEditorDown"] },
        { "before": ["<leader>", "c"], "commands": ["workbench.action.closeEditorsInGroup"] },

        // Close current editor tab
        { "before": ["<leader>", "q"], "commands": ["workbench.action.closeActiveEditor"] },

        // Project/file navigation
        { "before": ["<leader>", "e"], "commands": ["workbench.view.explorer"] },
        { "before": ["<leader>", "p"], "commands": ["workbench.action.quickOpen"] },

        // Next occurrence (multi-cursor)
        { "before": ["<leader>", "n"], "commands": ["editor.action.addSelectionToNextFindMatch"] },

        // Go to gobal definition
        { "before": ["<leader>", "d"], "commands": ["editor.action.revealDefinition"] },

        // Terminal
        { "before": ["<leader>", "t"], "commands": ["workbench.action.terminal.toggleTerminal"] },

        // Run current (no debug)
        { "before": ["<leader>", "r"], "commands": ["workbench.action.debug.startWithoutDebugging"] },

        // Exact goto mark
        { "before": ["<leader>", "m"], "after": ["`"] }
    ],

    // Visual mode 
    "vim.visualModeKeyBindingsNonRecursive": [
        // $^ Swap
        { "before": ["$"], "after": ["^"] },
        { "before": ["^"], "after": ["$"] },

        // Exact goto mark
        { "before": ["<leader>", "m"], "after": ["`"] }
    ],

    // $^ Swap, Pending mode
    "vim.operatorPendingModeKeyBindingsNonRecursive": [
        { "before": ["$"], "after": ["^"] },
        { "before": ["^"], "after": ["$"] }
    ],

    "editor.semanticHighlighting.enabled": true,

    "editor.semanticTokenColorCustomizations": {
        "[GitHub Dark High Contrast]": {
        "rules": {
            "type": "#E5D26A",

            "property": "#66D9EF"
        }
        }
    },

    "editor.tokenColorCustomizations": {
        "[GitHub Dark High Contrast]": {
        "textMateRules": [
            {
            "scope": [
                "meta.preprocessor",
                "keyword.control.directive",
                "keyword.control.directive.include",
                "meta.preprocessor.include",
                "keyword.control.import",
                "keyword.control.directive.include.cpp",
                "meta.preprocessor.include.cpp"
            ],
            "settings": {
                "foreground": "#7EE787"
            }
            },

            {
            "scope": [
                "storage.type.typedef",
                "storage.type.typedef.cpp",
                "keyword.other.typedef",
                "storage.modifier.specifier.const.cpp"
            ],
            "settings": {
                "foreground": "#7EE787"
            }
            },
{
            "scope": [
                "storage.type.built-in.primitive.cpp"
                
            ],
            "settings": {
                "foreground": "#b75afa"
            }
            },

            {
            "scope": [
                "string.quoted.double.cpp"
                
            ],
            "settings": {
                "foreground": "#329cd1"
            }
            },

            {
            "scope": [
                "entity.name.type.struct",
                "entity.name.type.struct.cpp",
                "entity.name.type"
                
            ],
            "settings": {
                "foreground": "#E5D26A"
            }
            },

            {
            "scope": [
                "variable.other.member",
                "variable.other.member.cpp",
                "variable.other.property"
            ],
            "settings": {
                "foreground": "#66D9EF"
            }
            }
        ]
        }
    }
}